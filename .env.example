# ============================================================================
# Environment Variables Template
# Copy this file to .env and update the values for your local environment
# ============================================================================

# Project Configuration
PROJECT_ROOT=${PWD}

# Airflow Configuration
AIRFLOW_HOME=${PROJECT_ROOT}
AIRFLOW__CORE__DAGS_FOLDER=${PROJECT_ROOT}/dags
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__EXECUTOR=SequentialExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=sqlite:///${PROJECT_ROOT}/airflow.db
AIRFLOW__LOGGING__BASE_LOG_FOLDER=${PROJECT_ROOT}/logs

# Spark Configuration
# SPARK_HOME=/path/to/spark  # Optional: Only needed if using standalone Spark (not required for this project)
PYSPARK_PYTHON=python3
PYSPARK_DRIVER_PYTHON=python3

# Java Configuration (Required for Spark)
JAVA_HOME=/path/to/java  # Update this to your Java installation path

# Python Path
PYTHONPATH=${PROJECT_ROOT}:${PYTHONPATH}

# Logging
LOG_LEVEL=INFO
